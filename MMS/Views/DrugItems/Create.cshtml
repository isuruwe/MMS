@using PagedList.Mvc;
@using PagedList;




<div ng-app="EpisodeApp" class="container">

    <div ng-controller="EpisodeCntrl" id="epicontrol" ng-init="initdrug()">

        <div ng-show="divPor" class="form-horizontal">
            <section class="navbar navbar-fixed-top custom-navbar" role="navigation">
                <div class="container">

                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a href="@Url.Action("Index","Home")">HOME</a>

                            </li>
                            
                            <li>
                                <div ng-show="showerror">
                                    <span style="background-color:black">Error!</span>
                                </div>

                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#work">TOP</a></li>
                           <li>@Html.ActionLink("Back to List", "Index")</li> 

                            @* <li><a href="#work" class="smoothScroll">NURSE</a></li>*@
                            @*<li><a href="#about" class="smoothScroll">ABOUT</a></li>*@
                           

                        </ul>


                    </div>



                </div>
            </section>

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col-md-16">

                   <h2>Drug Stock Entry Form</h2> 

                </div>


                <div class="form-group col-md-16">

                    @Html.Label("Drug Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <input type="text" ng-model="DName1" >

                    <a class="clear" ng-click="DName1=null">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>

                </div>



                <div class="form-group col-md-16">
                    @Html.Label("Quantity", htmlAttributes: new { @class = "control-label col-md-2" })

                    <input type="text" ng-model="qnty" />

                </div>

                <div class="form-group col-md-16">
                    @Html.Label("Order No", htmlAttributes: new { @class = "control-label col-md-2" })

                    <input type="text" ng-model="dordno" />

                </div>


                <input type="submit" ng-click="saveditem()" value="Add" class="btn-primary btn-sm" />
            </div>
            <div class="form-horizontal" style="border:1px solid #0094ff; overflow-y:hidden">
                @if (ViewBag.OnePageOfProducts.Count > 0)
                {
                    <table class="table table-striped">
                        <tr>
                            <th>

                            </th>
                            <th>
                                Service No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Test Name
                            </th>



                        </tr>

                        @foreach (var item in ViewBag.OnePageOfProducts)
                        {
                            <tr>
                                <td align="left">
                                    @item.ItemDescription
                                </td>
                               
                                <td align="left">
                                    @item.StockQuantity
                                </td>


                            </tr>
                        }

                    </table>
                }
                else
                {
                    //Response.Redirect("~/Home/Index/");
                    <div><ce3ter>No Results</ce3ter></div>
                }
                @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Create", new { page }))
            </div>



            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

        </div>
    </div>
</div>
