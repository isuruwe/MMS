            @Html.DisplayFor(modelItem => item.MaxPatients)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bed_Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ward_Type)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Ward_ID }) |
